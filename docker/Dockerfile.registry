FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy registry code and version
COPY registry/ ./registry/
COPY config/ ./config/
COPY VERSION ./VERSION

# Create non-root user
RUN useradd -m -u 1000 netring && chown -R netring:netring /app
USER netring

EXPOSE 8756

CMD ["python", "registry/main.py", "config/registry.yaml"]